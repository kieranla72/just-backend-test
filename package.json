{
  "name": "just-backend-test",
  "version": "1.0.0",
  "description": "Tech test for just - demonstration of hexagonal architecture",
  "main": "dist/index.js",
  "scripts": {
    "test": "jest --verbose",
    "build": "tsc",
    "start": "npm run build && node dist/src/index.js",
    "watch": "npm run build && nodemon src/index.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "test-ci": "CI=true jest --ci --reporters=jest-junit --reporters=default"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kieranla72/just-backend-test.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kieranla72/just-backend-test/issues"
  },
  "homepage": "https://github.com/kieranla72/just-backend-test#readme",
  "dependencies": {
    "@types/express": "^4.17.14",
    "@types/jest": "^29.0.3",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "axios": "^0.27.2",
    "better-sqlite3": "^7.6.2",
    "dotenv": "^16.0.2",
    "eslint": "^8.24.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "sqlite": "^4.1.2",
    "sqlite3": "^5.1.1",
    "supertest": "^6.2.4",
    "ts-jest": "^29.0.2",
    "ts-node": "^10.9.1",
    "typeorm": "^0.3.10",
    "typescript": "^4.8.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "@types/supertest": "^2.0.12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm i && npm run test && npm run build && npm run format && git add -A"
    }
  }
}
